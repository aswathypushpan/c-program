#include<stdio.h>
int ar[10],ch,n,top,x,i;
void insert(void);
void delete(void);
void display(void);
int main()
{
    top=-1;
    printf("\n Enter the size");
    scanf("%d",&n);
    printf("\n\t 1.insert\n\t 2.delete\n\t 3.display\n\t 4.exit");
    do
    {
        printf("\n Enter the Choice:");
        scanf("%d",&ch);
        switch(ch)
        {
            case 1:
            {
                insert();
                break;
            }
            case 2:
            {
                delete();
                break;
            }
            case 3:
            {
                display();
                break;
            }
            case 4:
            {
                printf("\n\t exit");
                break;
            }
            default:
            {
                printf ("\n\t invalid choice");
            }

        }
    }
    while(ch!=4);
    return 0;
}
void insert()
{
    if(top>=n-1)
    {
        printf("\n array full!!");

    }
    else
    {
        printf(" Enter a value:");
        scanf("%d",&x);
        top++;
        ar[top]=x;
    }
}
void delete()
{
        printf("\n\t deleted element is %d",ar[top]);
        top--;
    }
void display()
{
    if(top>=0)
    {
        printf("\n The elements are \n");
        for(i=top; i>=0; i--)
            printf("\n%d",ar[i]);
    }
}