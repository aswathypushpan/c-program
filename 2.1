#include <stdio.h>
struct complex
{
    float r;
    float i;
};

void input(struct complex*);
void display(struct complex);
struct complex sum(struct complex, struct complex);
struct complex product(struct complex, struct complex);

int main()
{
    struct complex n1, n2, n3, n4;
    printf("\nEnter First Complex Number: \n");
    input(&n1);
    printf("\nEnter Second Complex Number: \n");
    input(&n2);
    printf("\nFirst Complex number is ");
    display(n1);
    printf("\nSecond Complex number is ");
    display(n2);
    n3 = sum(n1, n2);
    printf("\n\nAddition = ");
    display(n3);
    n4 = product(n1, n2);
    printf("\n\nProduct = ");
    display(n4);
    return 0;
} 

void input(struct complex *t)
{
    printf("\nEnter value in\n");
    printf("real part : ");
    scanf("%f", &t->r);
    printf("imaginary part : ");
    scanf("%f", &t->i);
} 

void display(struct complex c)
{
    printf("\n%0.2f + %0.2f i", c.r, c.i);
} 

struct complex sum(struct complex t1, struct complex t2)
{
    struct complex t;
    t.r = t1.r + t2.r;
    t.i = t1.i + t2.i;
    return t;
} 

struct complex product(struct complex t1, struct complex t2)
{
    struct complex t;
    t.r = t1.r * t2.r - t1.i * t2.i;
    t.i = t1.r * t2.i + t1.i * t2.r;
    return t;
}